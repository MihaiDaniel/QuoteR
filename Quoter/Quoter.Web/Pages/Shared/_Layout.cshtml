<body class="index-page">

	@* -- HEADER -- *@
	<header id="header" class="header d-flex align-items-center sticky-top">
		<div class="container-fluid container-xl position-relative d-flex align-items-center">
			<a href="index" class="logo d-flex align-items-center me-auto">
				<!-- Uncomment the line below if you also wish to use an image logo -->
				@* <img width="40" height="40" src="~/images/minuteverselogosmall.png" /> *@
				<h1 class="sitename">Minute Verse</h1>
			</a>

			<nav id="navmenu" class="navmenu">
				<ul>
					<li><a href="#home" class="active">@Localizer["Home"]</a></li>
					<li><a href="#about">@Localizer["About"]</a></li>
					<li><a href="#features">@Localizer["Features"]</a></li>
					@if (SignInManager.IsSignedIn(User))
					{
						<li><a asp-page="/AdminDashboard/Index">@Localizer["Admin Dashboard"]</a></li>
					}
					
					<li class="dropdown">@await Html.PartialAsync("_SetCulturePartial", new { culture, returnUrl })</li>
					@if (SignInManager.IsSignedIn(User))
					{
						<li>
							<form class="form-inline" method="post">
								<button class="btn btn-danger" asp-page="/Index" asp-page-handler="Logout" type="submit">Logout</button>
							</form>
						</li>
					}
				</ul>
				<i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
			</nav>

		</div>
	</header>

	@* -- BODY -- *@
	<main class="main">
		@RenderBody()
	</main>

	@* -- FOOTER -- *@
	<footer id="footer" class="footer">
		<div class="container footer-top">
			<div class="row gy-4">
				<div class="col-lg-4 col-md-6 footer-about">
					<a href="index" class="d-flex align-items-center">
						<span class="sitename">Minute Verse</span>
					</a>
					<div class="footer-contact pt-3">
						<p>Build faith...</p>
						<p>One verse at a time.</p>
					</div>
				</div>
				<div class="col-lg-2 col-md-3 footer-links">
