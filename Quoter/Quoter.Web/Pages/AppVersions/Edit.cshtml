@page
@using Quoter.Web.ViewModels.Shared;
@using Quoter.Shared.Enums;
@model Quoter.Web.Pages.AppVersions.EditModel

@{
	ViewData["Title"] = "Edit app version";
}

<div class="container">
	@await Html.PartialAsync("_BreadCrumbsPartial",
	new BreadCrumbsViewModel(
	"Edit application version",
	new RouteViewModel("Application versions","/AppVersions/Index")))
	<div class="container m-1">
		<h2>Edit application version</h2>
	</div>
	<div class="container mt-2">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ViewModel.Id" />
			<div class="row p-1">
				<div class="col-1">
					<label asp-for="ViewModel.Name" class="control-label"></label>
				</div>
				<div class="col-3">
					<input asp-for="ViewModel.Name" class="form-control" />
					<span asp-validation-for="ViewModel.Name" class="text-danger"></span>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-1">
					<label asp-for="ViewModel.Version" class="control-label"></label>
				</div>
				<div class="col-3">
					<input asp-for="ViewModel.Version" class="form-control" />
					<span asp-validation-for="ViewModel.Version" class="text-danger"></span>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-1">
					<label asp-for="ViewModel.Description" class="control-label"></label>
				</div>
				<div class="col-3">
					<input asp-for="ViewModel.Description" class="form-control" />
					<span asp-validation-for="ViewModel.Description" class="text-danger"></span>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-1">
					<label asp-for="ViewModel.Os" class="control-label"></label>
				</div>
				<div class="col-3">
					<select asp-for="ViewModel.Os" class="form-control" asp-items="Html.GetEnumSelectList<EnumOperatingSystem>()"></select>
					<span asp-validation-for="ViewModel.Os" class="text-danger"></span>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-1">
					<label asp-for="ViewModel.Path" class="control-label"></label>
				</div>
				<div class="col-3">
					<input asp-for="ViewModel.Path" class="form-control" readonly />
					<span asp-validation-for="ViewModel.Path" class="text-danger"></span>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-2">
					<div class="form-check form-switch">
						<input asp-for="ViewModel.IsAvailable" class="form-check-input" type="checkbox" role="switch" />
						<label asp-for="ViewModel.IsAvailable" class="form-check-label"></label>
					</div>
				</div>
			</div>
			<div class="row p-1">
				<div class="col-2">
					<button type="submit" value="Save" class="btn btn-success">
						Save
					</button>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
