@page
@using Quoter.Shared.Enums;
@model Quoter.Web.Pages.AppVersions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AppVersion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewModel.Id" />
            <div class="form-group">
				<label asp-for="ViewModel.Name" class="control-label"></label>
				<input asp-for="ViewModel.Name" class="form-control" />
				<span asp-validation-for="ViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="ViewModel.Version" class="control-label"></label>
				<input asp-for="ViewModel.Version" class="form-control" />
				<span asp-validation-for="ViewModel.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="ViewModel.Description" class="control-label"></label>
				<input asp-for="ViewModel.Description" class="form-control" />
				<span asp-validation-for="ViewModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="ViewModel.Os" class="control-label"></label>
				<select asp-for="ViewModel.Os" class="form-control" asp-items="Html.GetEnumSelectList<EnumOperatingSystem>()"></select>
				<span asp-validation-for="ViewModel.Os" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="ViewModel.Path" class="control-label"></label>
				<input asp-for="ViewModel.Path" class="form-control" readonly />
				<span asp-validation-for="ViewModel.Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
