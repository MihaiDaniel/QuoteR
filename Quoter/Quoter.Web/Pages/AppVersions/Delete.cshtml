@page
@using Quoter.Web.ViewModels.Shared;
@model Quoter.Web.Pages.AppVersions.DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<div class="container">
	@await Html.PartialAsync("_BreadCrumbs",
	new BreadCrumbsViewModel(
	"Delete application version",
	new RouteViewModel("Application versions","/AppVersions/Index")))
	<div class="container m-1">
		<h2>Are you sure you want to delete version @Model.ViewModel.Version ?</h2>
	</div>
	<div class="container mt-2">
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.Name)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.Name)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.Version)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.Version)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.Description)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.Description)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.Os)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.Os)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.Path)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.Path)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ViewModel.CreationDate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ViewModel.CreationDate)
			</dd>
		</dl>
		<div class="row row-cols-auto">
			<div class="col">
				<a asp-page="./Index" class="btn btn-secondary">Back to List</a>
			</div>
			<div class="col">
				<form method="post">
					<input type="hidden" asp-for="ViewModel.Id" />
					<input type="submit" value="Delete" class="btn btn-danger" />
					
				</form>
			</div>
		</div>
	</div>
</div>